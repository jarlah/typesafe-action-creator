{
  "name": "typesafe-action-creator",
  "version": "1.0.0",
  "description": "Typesafe Action Creator utility for use in redux or react hooks",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarlah/typesafe-action-creator.git"
  },
  "keywords": ["typesafe", "action", "creator", "redux", "react", "hooks"],
  "author": "Jarl André Hübenthaø",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jarlah/typesafe-action-creator/issues"
  },
  "homepage": "https://github.com/jarlah/typesafe-action-creator#readme",
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  }
}
